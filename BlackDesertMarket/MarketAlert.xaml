<Window x:Class="BlackDesertMarket.MarketAlert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlackDesertMarket"
        mc:Ignorable="d"
        Title="MarketAlert" Height="450" Width="800">
    <Grid>
        <ListView Name="ItemList" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,234,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="RefreshButton" Content="RefreshQueue" HorizontalAlignment="Left" Margin="516,101,0,0" VerticalAlignment="Top" Height="31" Width="91" Click="RefreshButton_Click"/>

    </Grid>
</Window>
